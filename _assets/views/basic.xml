<?xml version="1.0" encoding="UTF-8"?>

<theme>
  <formatVersion>7</formatVersion>

  <view name="basic">

      <image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>0</zIndex>
         <color>${systemBG}</color>
			<path>./../_assets/backgrounds/mame.png</path>
		</image> 

		<helpsystem name="help">
			<textColor>${textColor}90</textColor>
			<iconColor>${textColor}90</iconColor>
			<fontSize>0.025</fontSize>
			<fontPath>./../_assets/fonts/ubuntu_condensed.ttf</fontPath>
		</helpsystem>

		<textlist name="gamelist">
         <selectorColor>${bgColor}</selectorColor>
         <selectedColor>${activeColor}</selectedColor>
         <primaryColor>${textColor}</primaryColor>
         <secondaryColor>${menuColor}</secondaryColor>
         <fontPath>./../_assets/fonts/SST.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <pos>0.160 0.144</pos>
         <size>0.684 0.725</size>
         <alignment>center</alignment>
         <horizontalMargin>0.01</horizontalMargin>
         <origin>0 0</origin>
		</textlist>

  </view>

</theme>