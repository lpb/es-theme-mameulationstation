<?xml version="1.0" encoding="UTF-8"?>

<theme>
	<formatVersion>7</formatVersion>
	<view name="grid">

		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>0</zIndex>
			<color>3d8896</color>
			<path>./../_assets/backgrounds/bg1.png</path>
		</image>

		<helpsystem name="help">
			<textColor>${textColor}90</textColor>
			<iconColor>${textColor}90</iconColor>
			<fontSize>0.025</fontSize>
			<fontPath>./../_assets/fonts/ubuntu_condensed.ttf</fontPath>
		</helpsystem>

		<imagegrid name="gamegrid">
			<pos>0.025 0.13</pos>
			<size>0.569 0.73</size>
			<margin>0.0025 0.0025</margin>
			<padding>0.01 0.01 0.01 0.01</padding>
			<autoLayout>3 2</autoLayout>
			<autoLayoutSelectedZoom>1.06</autoLayoutSelectedZoom>
			<centerSelection>false</centerSelection>
			<animateSelection>false</animateSelection>
			<gameImage>./../_assets/icons/no_boxart.svg</gameImage>
			<scrollbarColor>${scrollColor}ff</scrollbarColor>
			<scrollbarCorner>0.49</scrollbarCorner>
			<scrollbarSize>0.005</scrollbarSize>
		</imagegrid>

		<gridtile name="default">
			<backgroundColor>${textColor}00</backgroundColor>
			<backgroundCornerSize>5 5</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<padding>3 3</padding>
			<imageColor>${textColor}B0</imageColor>
		</gridtile>

		<gridtile name="selected">
			<backgroundColor>${textColor}00</backgroundColor>
			<imageColor>${textColor}ff</imageColor>
		</gridtile>

		<image name="gridtile.favorite">
			<path>./../_assets/icons/favorite.svg</path>
			<pos>0.94 0.05</pos>
			<maxSize>0.15 0.15</maxSize>
			<origin>0.5 0.5</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<color>${faveColor}</color>
		</image>

		<ninepatch name="gridtile.background:selected">
			<path>./../_assets/icons/gridframe.png</path>
			<cornerSize>36 36</cornerSize>
			<padding>-18 -18</padding>
			<color>${baseColor}</color>
			<animateColor>${textColor}77</animateColor>
			<animateColorTime>1000</animateColorTime>
		</ninepatch>

		<image name="gamelistBackground" extra="true">
			<path>./../_assets/icons/space.png</path>
			<color>141414aa</color>
			<origin>0 0</origin>
			<pos>0.6 0.14</pos>
			<size>0.36 0.73</size>
			<zIndex>12</zIndex>
		</image>

		<image name="md_image">
			<visible>false</visible>
			<color>${textColor}B0</color>
		</image>

		<text name="md_name">
			<pos>0.62 0.14</pos>
			<size>0.30 0.05</size>
			<color>${textColor}F0</color>
			<fontSize>0.032</fontSize>
			<fontPath>./../_assets/fonts/SST.ttf</fontPath>
			<alignment>center</alignment>
			<glowColor>${glowColor}</glowColor>
			<glowSize>2</glowSize>
		</text>

		<video name="md_video">
			<pos>0.78 0.43</pos>
			<maxSize>0.30 0.38</maxSize>
			<origin>0.5 0.5</origin>
			<delay>0.1</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<snapshotSource>image</snapshotSource>
			<effect>none</effect>
			<zIndex>110</zIndex>
			<color>${textColor}FF</color>
		</video>

		<image name="md_marquee">
			<visible>false</visible>
			<color>${textColor}B0</color>
		</image>

		<text name="md_publisher">
			<color>${textColor}ff</color>
			<pos>0.62 0.168</pos>
			<size>0.30 0.05</size>
			<alignment>center</alignment>
			<fontSize>0.020</fontSize>
			<glowSize>3</glowSize>
			<fontPath>./../_assets/fonts/fonts/ubuntu_condensed.ttf</fontPath>
		</text>

		<text name="md_description">
			<pos>0.61 0.65</pos>
			<size>0.34 0.2</size>
			<color>${textColor}ff</color>
			<fontSize>0.025</fontSize>
			<fontPath>./../_assets/fonts/ubuntu_condensed.ttf</fontPath>
		</text>

		<datetime name="md_releasedate">
			<origin>0 0</origin>
			<pos>0.848 0.889</pos>
			<size>0.1 0.02</size>
			<rotation>0</rotation>
			<alignment>left</alignment>
			<format>%Y</format>
			<fontPath>./../_assets/fonts/ubuntu_condensed.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<color>${textColor}bb</color>
			<zIndex>180</zIndex>
		</datetime>

		<image name="md_flag">
			<origin>0 0</origin>
			<pos>0.824 0.889</pos>
			<maxSize>0.02 0.05</maxSize>
			<color>${textColor}bb</color>
		</image>

		<rating name="md_rating">
			<pos>0.935 0.884</pos>
			<size>0.05 0.03</size>
			<rotation>0</rotation>
			<color>${ratingColor}</color>
			<origin>0.5 0</origin>
			<horizontalAlignment>right</horizontalAlignment>
			<unfilledColor>${textColor}bb</unfilledColor>
			<unfilledPath>./../_assets/icons/star_filled.svg</unfilledPath>
		</rating>

		<text name="md_players">
			<pos>0.808 0.899</pos>
			<size>0.03 0.03</size>
			<origin>0.5 0.5</origin>
			<fontPath>./../_assets/fonts/players.ttf</fontPath>
			<text>1</text>
			<alignment>center</alignment>
			<fontSize>0.034</fontSize>
			<color>${textColor}bb</color>
		</text>

		<image name="md_manual">
			<pos>0.785 0.90</pos>
			<path>./../_assets/icons/manual.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textColor}ff</color>
			<zIndex>150</zIndex>
		</image>

		<image name="md_nomanual">
			<pos>0.785 0.90</pos>
			<path>./../_assets/icons/manual.svg</path>
			<maxSize>0.02 0.03</maxSize>
			<origin>0.5 0.5</origin>
			<color>${textColor}1f</color>
			<zIndex>150</zIndex>		
		</image>

